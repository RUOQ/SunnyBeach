<?xml version="1.0" encoding="utf-8"?>
<cn.cqautotest.sunnybeach.widget.SuperLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui.activity.ModifyUserInfoActivity">

    <com.hjq.bar.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barStyle="light"
        app:rightTitle="@string/common_step_complete"
        app:rightTitleColor="@color/black" />

    <com.hjq.shape.view.ShapeEditText
        android:id="@+id/et_input_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:background="@null"
        android:imeOptions="actionDone"
        android:paddingVertical="@dimen/dp_20"
        android:singleLine="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:background="@color/black5" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginVertical="@dimen/dp_10"
        android:text="当前已输入 0 字"
        android:textColor="@color/default_font_color"
        android:textSize="@dimen/sp_11" />

</cn.cqautotest.sunnybeach.widget.SuperLinearLayout>